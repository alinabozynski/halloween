<header class="container has-background-grey-light">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">

    <div class="level">
        <h1 class="title is-1">Halloween Movies in Alphabetical Order</h1>
        <h3 class="title is-3"><%= link_to 'Home', home_path %></h3>
    </div>
    <div class="navbar has-background-grey-lighter">
        <div class="navbar-item">
            <h4 class="title is-4"><%= link_to 'Back to All Halloween Movies', halloween_movies_path %></h4>
        </div>
    </div>
</header>
<div class="container">
    <table class="table">
        <% @halloween_movies.each do |halloween_movie| %>
        <tr>
            <th><%= link_to halloween_movie.title, halloween_movie_path(halloween_movie.id) %></th>
            <th><%= image_tag(url_for(halloween_movie.image), style: 'height:25vw;width:20vw') %></th>
        </tr>
        <% end %>
    </table>
    <%= paginate @halloween_movies %>
</div>
