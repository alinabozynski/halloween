<header>
  <h1>Halloween Movies</h1>
  <div>
    <h3><%= link_to 'Alphabetical List', halloween_movies_alphabetical_path %></h3>
    <h3><%= link_to 'Back to All Halloween Movies', halloween_movies_path %></h3>
    <h3><%= link_to 'Home', home_path %></h3>
    <form action="/halloween_movie/search">
      <input type="text" placeholder="Movie Name" name="title" required>
      <button type="submit">Search</button>
    </form>
  </div>
</header>
<% if (@halloween_movies.count > 0) %>
  <table>
    <% @halloween_movies.each do |halloween_movie| %>
      <tr>
        <th><%= link_to halloween_movie.title, halloween_movie_path(halloween_movie.id) %></th>
        <th><%= image_tag(url_for(halloween_movie.image), style: 'height:25vw;width:20vw') %></th>
      </tr>
    <% end %>
  </table>
<%= paginate @halloween_movies %>
<% else %>
  <h2>No Search Results</h2>
<% end %>
