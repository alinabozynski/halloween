<h1>Imdb Horror Movies</h1>
<div>
  <h4>Lists: <%= link_to 'Organized by Rating', imdb_horror_movies_ratings_path %></h4> 
  <form action="/imdb_horror_movie/search">
    <input type="text" placeholder="IDMB Horror Movie Name" name ="s" required>
    <button type="submit">Search</button>
  </form>
</div>
<table>
	<tr>
		<th>Title</th>
		<th>Release Date</th>
		<th>Release Country</th>
		<th>Rating</th>
		<th>Run Time</th>
		<th>Language</th>
	</tr>

<% @imdb_movies.each do |imdb_movie| %>
	<tr>
		<td><%= link_to imdb_movie.title, imdb_horror_movie_path(imdb_movie.id) %></td>
		<td><%= imdb_movie.release_date %></td>	
		<td><%= imdb_movie.release_country %></td>
		<td><%= imdb_movie.rating %></td>
		<td><%= imdb_movie.run_time %></td>
		<td><%= imdb_movie.language %></td>
	</tr>
<% end %>
</table>
